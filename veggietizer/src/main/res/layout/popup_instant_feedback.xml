<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="freerunningapps.veggietizer.view.activity.OverviewActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/line_margin_instant_feedback_popup"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
        
	        <ImageView
	            android:id="@+id/instant_feedback_icon_meat"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:maxHeight="@dimen/IconChartIconSize"
	            android:maxWidth="@dimen/IconChartIconSize"
	            android:paddingRight="@dimen/icon_margin_instant_feedback_popup"
	            android:src="@drawable/ic_meat" />
        
	        <TextView
	            android:id="@+id/instant_feedback_popup_meat"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            
	            android:text="@string/placeholder"
	            android:textSize="@dimen/text_size_instant_feedback_popup"
				android:textColor="@color/text_gray"/>
	        
	    </LinearLayout>	
	
		<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/line_margin_instant_feedback_popup"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
	        
		    <ImageView
	            android:id="@+id/instant_feedback_icon_carbon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="@dimen/icon_margin_instant_feedback_popup"
	            android:src="@drawable/ic_co2" />
	        
	        <TextView
	            android:id="@+id/instant_feedback_popup_carbon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/placeholder"
	            android:textSize="@dimen/text_size_instant_feedback_popup"
				android:textColor="@color/text_gray"/>
	        
	    </LinearLayout>
	        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/line_margin_instant_feedback_popup"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	        
	        <ImageView
	            android:id="@+id/instant_feedback_icon_water"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="@dimen/icon_margin_instant_feedback_popup"
	            android:src="@drawable/ic_water" />
	        
	        <TextView
	            android:id="@+id/instant_feedback_popup_water"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/placeholder"
	            android:textSize="@dimen/text_size_instant_feedback_popup"
				android:textColor="@color/text_gray"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/line_margin_instant_feedback_popup"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	        
	        <ImageView
	            android:id="@+id/instant_feedback_icon_feed"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="@dimen/icon_margin_instant_feedback_popup"
	            android:src="@drawable/ic_feed" />
	        
	        <TextView
	            android:id="@+id/instant_feedback_popup_feed"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/placeholder"
	            android:textSize="@dimen/text_size_instant_feedback_popup"
				android:textColor="@color/text_gray"/>
	        
	    </LinearLayout>

    </LinearLayout>

</ScrollView>