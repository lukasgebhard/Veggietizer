<resources>
    <style name="CustomActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/veggie_green_dark</item>

        <!-- Support library compatibility -->
        <item name="background">@color/veggie_green_dark</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <item name="android:textColor">@android:color/black</item>

        <!-- Active or checked theme UI controls like radio buttons, checkboxes and text fields -->
        <item name="colorAccent">@color/veggie_green_dark</item>

        <!-- Unchecked radio buttons and checkboxes -->
        <item name="android:textColorSecondary">@color/holo_gray</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarTheme</item>
    </style>

    <!-- For the list groups in the info popups of the details pages. -->
    <style name="ListGroupText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
</resources>
