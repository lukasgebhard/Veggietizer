<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="freerunningapps.veggietizer.view.activity.OverviewActivity"
    android:paddingBottom="@dimen/popup_achievement_vertical_margin"
    android:paddingLeft="@dimen/popup_achievement_horizontal_margin"
    android:paddingRight="@dimen/popup_achievement_horizontal_margin"
    android:paddingTop="@dimen/popup_achievement_vertical_margin"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/line_margin_achievement_popup" >

            <ImageView
                android:id="@+id/achievements_popup_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/image_size_achievement_popup"
                android:maxWidth="@dimen/image_size_achievement_popup"
                android:paddingRight="@dimen/icon_text_margin_achievement_popup"
                android:scaleType="fitCenter"/>
            
            <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
                <TextView
                    android:id="@+id/achievements_popup_requirements_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_achievement_popup"
                    android:textStyle="bold"
                    android:textColor="@color/text_gray"/>

	            <TextView
	                android:id="@+id/achievements_popup_requirements"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/achievement_placeholder"
	                android:textSize="@dimen/text_size_achievement_popup"
                    android:textColor="@color/text_gray"/>

	        </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/AchievementsHorizontalLine"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/holo_gray_light" />

        <TextView
            android:id="@+id/achievements_popup_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/line_margin_achievement_popup"
            android:text="@string/achievement_placeholder"
            android:textSize="@dimen/text_size_achievement_popup"
            android:textColor="@color/text_gray"/>

    </LinearLayout>

</ScrollView>