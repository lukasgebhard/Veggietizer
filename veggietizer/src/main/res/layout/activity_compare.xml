<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_details"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_compare_savingsType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/savingsType"
                android:textSize="@dimen/heading_text_size" />

            <TextView
                android:id="@+id/textView_compare_savingsAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/headingPaddingBottom"
                android:text="@string/savingsAmount"
                android:textSize="@dimen/heading_text_size" />

            <LinearLayout
                android:id="@+id/activity_compare_block_top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/compare_inset"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView_animation_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_compare_block_inner_margin"
                    android:layout_marginBottom="@dimen/block_vertical_padding"
                    android:layout_marginTop="@dimen/block_vertical_padding"
                    android:layout_marginLeft="@dimen/block_horizontal_padding"/>

                <TextView
                    android:id="@+id/textView_compare_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_compare_text_size"
                    android:layout_marginRight="@dimen/block_horizontal_padding"
                    android:layout_marginBottom="@dimen/block_vertical_padding"
                    android:layout_marginTop="@dimen/block_vertical_padding"
                    android:textColor="@color/text_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_compare_block_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/compare_inset"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView_animation_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_compare_block_inner_margin"
                    android:layout_marginBottom="@dimen/block_vertical_padding"
                    android:layout_marginTop="@dimen/block_vertical_padding"
                    android:layout_marginLeft="@dimen/block_horizontal_padding"/>

                <TextView
                    android:id="@+id/textView_compare_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_compare_text_size"
                    android:layout_marginRight="@dimen/block_horizontal_padding"
                    android:layout_marginBottom="@dimen/block_vertical_padding"
                    android:layout_marginTop="@dimen/block_vertical_padding"
                    android:textColor="@color/text_gray"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
