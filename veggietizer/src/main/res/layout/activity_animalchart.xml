<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details_meat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_animal_chart_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/headingPaddingBottom"
                android:text="@string/textView_animalchart_heading"
                android:textSize="@dimen/heading_text_size" />

            <TextView
                android:id="@+id/textView_animalchart_savingsAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/headingPaddingBottom"
                android:text="@string/savingsAmount"
                android:textSize="@dimen/heading_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <freerunningapps.veggietizer.view.chart.IconChart
                    android:id="@+id/DetailsBeef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iconchart_inset_not_pressed"
                    android:paddingBottom="@dimen/block_vertical_padding_large"
                    android:paddingTop="@dimen/block_vertical_padding"
                    android:clickable="false"
                    custom:animationDuration="@integer/animationDurationPerIcon"
                    custom:chartWidthPercentage="@integer/chartWidthPercentage"
                    custom:heading="@string/meat_beef"
                    custom:headingSize="@dimen/chartHeadingSize"
                    custom:iconImg="beef"
                    custom:iconMargin="@dimen/IconChartIconMargin"
                    custom:iconSize="@dimen/IconChartIconSize"
                    custom:iconValue="@integer/iconValueAnimal"
                    custom:startDelayIconChart="@integer/animationStartDelay"
                    custom:textChartMargin="@dimen/chartTextMargin" >
                </freerunningapps.veggietizer.view.chart.IconChart>

                <freerunningapps.veggietizer.view.chart.IconChart
                    android:id="@+id/DetailsPork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iconchart_inset_not_pressed"
                    android:paddingBottom="@dimen/block_vertical_padding_large"
                    android:paddingTop="@dimen/block_vertical_padding"
                    android:clickable="false"
                    custom:animationDuration="@integer/animationDurationPerIcon"
                    custom:chartWidthPercentage="@integer/chartWidthPercentage"
                    custom:heading="@string/meat_pork"
                    custom:headingSize="@dimen/chartHeadingSize"
                    custom:iconImg="pork"
                    custom:iconMargin="@dimen/IconChartIconMargin"
                    custom:iconSize="@dimen/IconChartIconSize"
                    custom:iconValue="@integer/iconValueAnimal"
                    custom:startDelayIconChart="@integer/animationStartDelay"
                    custom:textChartMargin="@dimen/chartTextMargin" >
                </freerunningapps.veggietizer.view.chart.IconChart>

                <freerunningapps.veggietizer.view.chart.IconChart
                    android:id="@+id/DetailsPoultry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iconchart_inset_not_pressed"
                    android:paddingBottom="@dimen/block_vertical_padding_large"
                    android:paddingTop="@dimen/block_vertical_padding"
                    android:clickable="false"
                    custom:animationDuration="@integer/animationDurationPerIcon"
                    custom:chartWidthPercentage="@integer/chartWidthPercentage"
                    custom:heading="@string/meat_poultry"
                    custom:headingSize="@dimen/chartHeadingSize"
                    custom:iconImg="poultry"
                    custom:iconMargin="@dimen/IconChartIconMargin"
                    custom:iconSize="@dimen/IconChartIconSize"
                    custom:iconValue="@integer/iconValueAnimal"
                    custom:startDelayIconChart="@integer/animationStartDelay"
                    custom:textChartMargin="@dimen/chartTextMargin" >
                </freerunningapps.veggietizer.view.chart.IconChart>

                <freerunningapps.veggietizer.view.chart.IconChart
                    android:id="@+id/DetailsSheepGoat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iconchart_inset_not_pressed"
                    android:paddingBottom="@dimen/block_vertical_padding_large"
                    android:paddingTop="@dimen/block_vertical_padding"
                    android:clickable="false"
                    custom:animationDuration="@integer/animationDurationPerIcon"
                    custom:chartWidthPercentage="@integer/chartWidthPercentage"
                    custom:heading="@string/meat_sheep_goat"
                    custom:headingSize="@dimen/chartHeadingSize"
                    custom:iconImg="sheep_goat"
                    custom:iconMargin="@dimen/IconChartIconMargin"
                    custom:iconSize="@dimen/IconChartIconSize"
                    custom:iconValue="@integer/iconValueAnimal"
                    custom:startDelayIconChart="@integer/animationStartDelay"
                    custom:textChartMargin="@dimen/chartTextMargin" >
                </freerunningapps.veggietizer.view.chart.IconChart>

                <freerunningapps.veggietizer.view.chart.IconChart
                    android:id="@+id/DetailsFish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iconchart_inset_not_pressed"
                    android:paddingBottom="@dimen/block_vertical_padding_large"
                    android:paddingTop="@dimen/block_vertical_padding"
                    android:clickable="false"
                    custom:animationDuration="@integer/animationDurationPerIcon"
                    custom:chartWidthPercentage="@integer/chartWidthPercentage"
                    custom:heading="@string/meat_fish"
                    custom:headingSize="@dimen/chartHeadingSize"
                    custom:iconImg="fish"
                    custom:iconMargin="@dimen/IconChartIconMargin"
                    custom:iconSize="@dimen/IconChartIconSize"
                    custom:iconValue="@integer/iconValueAnimal"
                    custom:startDelayIconChart="@integer/animationStartDelay"
                    custom:textChartMargin="@dimen/chartTextMargin" >
                </freerunningapps.veggietizer.view.chart.IconChart>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>